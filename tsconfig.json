{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": { "*": ["*" , "hooks/*", "assets/*", "components/*", "screens/*" ]},
  },
  "include": ["./constants/**/*"],

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
